<section class="auth-container login">
  <h4>Login</h4>
  <p><a href="/register">Registreer je</a></p>
  {{>form-errors this}}
  <form method="post" action="login">
    {{#each inputs}}
      {{>form-input this}}
    {{/each}}
    <div class="footer-container">
      <input type="reset" class="btn btn-tertiary" value="Clear">
      <input type="submit" class="btn btn-primary" value="Login">
    </div>
  </form>
</section>